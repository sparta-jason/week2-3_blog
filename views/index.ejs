      crossorigin="anonymous"
    />

    <!-- Bulma -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    />

    <!-- Font Awesome CSS -->
    <script src="https://kit.fontawesome.com/47dd3a40e7.js" crossorigin="anonymous"></script>

    <!-- Optional JavaScript -->
